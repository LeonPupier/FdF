# Constants
NAME		=	fdf
CFLAGS		=	-Wall -Wextra -Werror

# Window size
SIZEX		=	1920
SIZEY		=	1080

# Directories path
DIR_SRCS	=	sources/
DIR_HEADERS	=	headers/
DIR_LIBFT	=	libft/
DIR_PRINFT	=	ft_printf/

# Files path
HEADERS	=	$(DIR_HEADERS)fdf.h \
			$(DIR_HEADERS)fdf.h \
			$(DIR_LIBFT)libft.h \

SRCS	=	$(DIR_SRCS)fdf.c \
			$(DIR_SRCS)geometry.c \

OBJS	=	$(SRCS:.c=.o)

# Rules
.PHONY :	all re clean fclean mickey

all :		${NAME}

%.o: %.c	$(HEADERS) Makefile
			$(CC) $(CFLAGS) -D SIZEX=$(SIZEX) -D SIZEY=$(SIZEY) -Imlx -c $< -o $@

${NAME}:	${OBJS}
			$(CC) $(OBJS) -Lmlx -lmlx -framework OpenGL -framework AppKit -o $(NAME)

clean :
			${RM} ${OBJS}

fclean :	clean
			${RM} ${NAME} 

re :		fclean all

mickey:
			@echo "$$MICKEY"

# Text art
